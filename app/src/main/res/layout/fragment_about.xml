<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/water"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10pt"
        android:text=""
        android:id="@+id/about_text1"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:textStyle="bold"
        android:paddingTop="20dp" />



    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aboutView2"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:src="@mipmap/banner" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/about_text2"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:paddingTop="20dp" />

    <ImageView
        android:id="@+id/about_staff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="96pt"
        android:minWidth="40pt"
        android:paddingLeft="5pt"
        android:paddingRight="5pt"
        android:layout_row="3"
        android:layout_column="0"
        android:src="@mipmap/staff"
        android:layout_gravity="top"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_staff"
        android:id="@+id/splash_text3"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"
       />

    <TextView
        android:layout_width="10pt"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/splash_text4"
        android:layout_row="3"
        android:layout_column="3"
        android:textStyle="bold"
        android:textColor="@color/white"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:paddingStart="20pt"
        android:paddingEnd="20pt"
        android:text="@string/about_copyright"
        android:id="@+id/splash_text2"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textColor="@color/white"
        android:paddingTop="100dp"
        android:src="@mipmap/banner" />


    <TextView
        android:id="@+id/site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:text="@string/the_new_boston"
    />

</GridLayout>
